<Page x:Class="HouseManagement.AddressesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HouseManagement"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Жилой фонд">
    <Page.Resources>
        <ResourceDictionary Source="/Dictionary1.xaml"></ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Жилой фонд"></TextBlock>
        <DataGrid Name="DataGrid_Main" Grid.Row="1" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}"></DataGridTextColumn>
                <DataGridTextColumn Header="Адрес" Binding="{Binding Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Начало управления" Binding="{Binding StartOfManagement}"></DataGridTextColumn>
                <DataGridTextColumn Header="Количество этажей" Binding="{Binding NumberOfStories}"></DataGridTextColumn>
                <DataGridTextColumn Header="Количество квартир" Binding="{Binding NumberOfFlats}"></DataGridTextColumn>
                <DataGridTextColumn Header="Площадь, М2" Binding="{Binding AreaM2}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
