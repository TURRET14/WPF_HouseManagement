<Page x:Class="HouseManagement.AddApplicationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HouseManagement"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Добавить/Изменить заявку">

    <Grid Width="500" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Добавить/Изменить заявку"></TextBlock>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Адрес"></TextBlock>
        <TextBox Name="TextBox_Address" Grid.Row="1" Grid.Column="1" Text="{Binding Адрес}"></TextBox>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Жилец"></TextBlock>
        <ComboBox Name="ComboBox_Resident" Grid.Row="2" Grid.Column="1" SelectedItem="{Binding Жильцы}" DisplayMemberPath="ФИО"></ComboBox>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Телефон"></TextBlock>
        <TextBox Name="TextBox_Phone" Grid.Row="3" Grid.Column="1" Text="{Binding Телефон}"></TextBox>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Описание проблемы"></TextBlock>
        <TextBox Name="TextBox_Description" Grid.Row="4" Grid.Column="1" Text="{Binding Описание_Проблемы}"></TextBox>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Ответственный исполнитель"></TextBlock>
        <ComboBox Name="ComboBox_Employee" Grid.Row="5" Grid.Column="1" SelectedItem="{Binding Сотрудники}" DisplayMemberPath="ФИО"></ComboBox>

        <TextBlock Grid.Row="6" Grid.Column="0" Text="Статус заявки"></TextBlock>
        <ComboBox Name="ComboBox_Status"  Grid.Row="6" Grid.Column="1" SelectedItem="{Binding СтатусыЗаявок}" DisplayMemberPath="Название"></ComboBox>

        <Button Name="Button_Save" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Click="Button_Save_Click">Сохранить</Button>
    </Grid>
</Page>
