<Page x:Class="HouseManagement.ApplicationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HouseManagement"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Все заявки"
      Loaded="Page_Loaded">
    <Page.Resources>
        <ResourceDictionary Source="/Dictionary1.xaml"></ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Все заявки"></TextBlock>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Name="Button_Addresses" Click="Button_Addresses_Click">Жилой фонд</Button>
            <Button Grid.Column="1" Name="Button_Employees" Click="Button_Employees_Click">Сотрудники</Button>
        </Grid>
        <Button Name="Button_ApplicationsCompletetionHistory" Grid.Row="2" Click="Button_ApplicationsCompletetionHistory_Click">История выполнения заявок</Button>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Name="Button_Create" Grid.Row="0" Grid.Column="0" Click="Button_Create_Click">Создать заявку</Button>
            <Button Name="Button_Delete" Grid.Row="0" Grid.Column="1" Click="Button_Delete_Click">Удалить заявку</Button>
        </Grid>
        
        <DataGrid Name="DataGrid_Main" Grid.Row="4" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Setters>
                        <EventSetter Event="MouseDoubleClick" Handler="DataGridRow_MouseDoubleClick"></EventSetter>
                    </Style.Setters>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding AllAddresses.Name}" Header="Адрес"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding FlatNumber}" Header="Номер квартиры"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Residents.FIO}" Header="Заявитель"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding PhoneNumber}" Header="Контактный телефон"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding ProblemDescription}" Header="Описание проблемы"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Employees.FIO}" Header="Ответственный исполнитель"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding ApplicationStatuses.Name}" Header="Статус заявки"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding DateOfCompletion}" Header="Дата выполнения заявки"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
