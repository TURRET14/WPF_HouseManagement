<Page x:Class="HouseManagement.ApplicationsCompletionHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HouseManagement"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="История выполнения заявок">
    <Page.Resources>
        <ResourceDictionary Source="/Dictionary1.xaml"></ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="История выполнения заявок"></TextBlock>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Сотрудник"></TextBlock>
            <ComboBox Name="ComboBox_Employee" Grid.Row="0" Grid.Column="1" DisplayMemberPath="FIO" SelectionChanged="ComboBox_Employee_SelectionChanged"></ComboBox>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Адрес"></TextBlock>
            <ComboBox Name="ComboBox_Address" Grid.Row="1" Grid.Column="1" DisplayMemberPath="Name" SelectionChanged="TextBox_Address_SelectionChanged"></ComboBox>
        </Grid>
        
        <DataGrid Name="DataGrid_Main" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding AllAddresses.Name}" Header="Адрес"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding FlatNumber}" Header="Номер квартиры"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Residents.FIO}" Header="Заявитель"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding PhoneNumber}" Header="Контактный телефон"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding ProblemDescription}" Header="Описание проблемы"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Employees.FIO}" Header="Ответственный исполнитель"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding ApplicationStatuses.Name}" Header="Статус заявки"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding DateOfCompletion}" Header="Дата выполнения заявки"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
